# WhatsApp + NotebookLM Bot Configuration
# Copy this file to .env and update with your values

# Target WhatsApp phone number (with country code, no + or spaces)
# Example: 919876543210 for India +91 9876543210
GF_PHONE_NUMBER=

# NotebookLM URL (full URL to your notebook or general NotebookLM URL)
NOTEBOOKLM_URL=https://notebooklm.google.com

# Response timing configuration (in milliseconds)
RESPONSE_MAX_WAIT=60000
RESPONSE_STABLE_MS=4000
QUICK_SEND=false
QUICK_SEND_MAX_MS=5000

# Target configuration (use only if needed)
TARGET_JID=
TARGET_LID=

# Reply settings
REPLY_ALL=false
MANUAL_SEND=false

# Custom prompt template (optional)
# Use {message} as placeholder for user message
# PROMPT_TEMPLATE=D says: "{message}"\n\nAssistant:

# Custom persona/system prompt (optional)
# This will be prepended to the prompt as system context
# PERSONA_PIN=

# Session and storage
AUTH_FOLDER=./auth_info
CHROME_USER_DATA=./chrome_user_data

# Do not put any real API keys, secrets, or tokens in this file. Only use for non-sensitive configuration.
